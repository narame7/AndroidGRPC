<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="500"
        app:scale_base_width="400">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_logo"
            app:scale_height="90"
            app:scale_left="20"
            app:scale_top="20"
            app:scale_width="360" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            app:scale_height="160"
            app:scale_left="120"
            app:scale_top="150"
            app:scale_width="160" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_textsize="30"
            app:textview_wrapcontent_direction="bottom"
            app:textview_wrapcontent_resizesurrounded="true"
            app:textview_wrapcontent_movesiblings="true"
            app:scale_height="45"
            app:scale_left="60"
            app:scale_top="330"
            app:scale_width="30"
            android:text="IP"/>

        <EditText
            android:id="@+id/ip_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:scale_textsize="23"
            app:textview_wrapcontent_resizesurrounded="true"
            app:textview_wrapcontent_movesiblings="true"
            app:scale_height="45"
            app:scale_left="90"
            app:scale_top="330"
            app:scale_width="250"
            android:hint="Your Server IP"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_textsize="30"
            app:textview_wrapcontent_direction="bottom"
            app:textview_wrapcontent_resizesurrounded="true"
            app:textview_wrapcontent_movesiblings="true"
            app:scale_height="45"
            app:scale_left="100"
            app:scale_top="380"
            app:scale_width="80"
            android:text="PORT"/>

        <EditText
            android:id="@+id/port_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            app:scale_textsize="23"
            app:textview_wrapcontent_resizesurrounded="true"
            app:textview_wrapcontent_movesiblings="true"
            app:scale_height="45"
            app:scale_left="180"
            app:scale_top="380"
            app:scale_width="120"/>

        <Button
            android:id="@+id/connectBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@drawable/connect_but"
            app:scale_height="45"
            app:scale_left="120"
            app:scale_top="440"
            app:scale_width="160" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</RelativeLayout>